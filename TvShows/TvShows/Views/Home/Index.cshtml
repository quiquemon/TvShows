@model IEnumerable<IEnumerable<TvShow>>

@if (Session["Error"] != null) {
	<div class="alert alert-danger alert-dismissable">
		<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
		@Session["ErrorMessage"]
	</div>
	Session["Error"] = Session["ErrorMessage"] = null;
}
<div class="jumbotron">
	<h1>Welcome to TvShows!</h1>
	<p>Here you will find everything about your favorite TV shows ;v</p>
</div>
<div class="row">
	<div class="col-sm-12">
		<div class="panel panel-success">
			<div class="panel-heading">
				<b>Take a look at the latest TV shows:</b>
			</div>
			<div class="panel-body">
				<div class="row">
					 @if (Model.Count() == 0) {
						 <div class="col-sm-12">
							 <h3 class="text-warning">Sorry, no Tv shows yet :(</h3>
						 </div>
					 } else {
						<div class="col-sm-6">
							<div class="list-group">
								@foreach (var show in Model.ElementAt(0)) {
									<a href="/Shows/Show/@show.ID" class="list-group-item">
										<span class="text-info">@show.Title</span>
									</a>
								}
							</div>
						</div>
						if (Model.Count() > 1) {
							<div class="col-sm-6">
								<div class="list-group">
									@foreach (var show in Model.ElementAt(1)) {
										<a href="/Shows/Show/@show.ID" class="list-group-item">
											<span class="text-info">@show.Title</span>
										</a>
									}
								</div>
							</div>
						}
					 }
				</div>
			</div>
		</div>
	</div>
</div>