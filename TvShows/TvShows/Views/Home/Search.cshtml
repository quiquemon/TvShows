@{ ViewBag.Title = "Search"; }
@model IEnumerable<TvShows.Models.Entities.TvShow>

<div class="row">
	<div class="col-sm-12">
		<h1>Showing results for "@ViewBag.Query":</h1>
		<hr>
		@if (Model.Count() == 0) {
			<h3 class="text-danger">No results :(</h3>
		} else {
			foreach (var show in Model) {
				<div class="panel panel-info">
					<div class="panel-heading">
						<a href="/Shows/View/@show.ID">
							<span class="glyphicon glyphicon glyphicon-film"></span>
							@show.Title
						</a>
					</div>
					<div class="panel-body">
						<p>
							<b class="text-info">Summary:</b> @show.Summary
						</p>
						<p>
							<b class="text-info">Created by:</b> @show.CreatedBy
						</p>
					</div>
				</div>
			}
		}
	</div>
</div>